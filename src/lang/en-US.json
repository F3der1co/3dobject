          "set-animation-rate": {
            "list-name": "Set animation rate",
            "display-text": "Set animation rate to {0}",
            "description": "Set animation rate (FPS).",
            "params": {
                  "rate": {
                      "name": "Rate",
                      "desc": "Rate (FPS)"
                  }
              }
          }
        },
        "expressions": {
          "animation-names": {
            "description": "Get animation names as JSON string.",
            "translated-name": "AnimationNames",
            "params": {}
          }
        }
