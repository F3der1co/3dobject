          },
          "mtl-path": {
            "name": "mtl path",
            "desc": "mtl file path"
          },
          "gtlf-path": {
            "name": "gtlf path",
            "desc": "gtlf file path"
          },
          "scale": {
            "name": "Scale",
            "desc": "Scale object"
          },
          "edit-image": {
            "name": "Edit image",
            "desc": "Edit image",
